{
	"name": "poyoyo",
	"version": "0.1.0",
	"author": "killbasa <git@killbasa.com>",
	"license": "Apache-2.0",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "yarn clean && tsc",
		"start": "node --enable-source-maps dist/main.js",
		"check": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test": "vitest --coverage --run",
		"test:watch": "vitest --watch",
		"clean": "rm -rf dist",
		"docker": "docker buildx build -t killbasa/poyoyo ."
	},
	"dependencies": {
		"discord.js": "^14.25.1",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "^4.0.14",
		"prettier": "^3.7.2",
		"typescript": "5.9.3",
		"vitest": "^4.0.14"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"biome check --write \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.{json,yml,yaml}": [
			"biome format --write \"**/*.{json,yml,yaml}\""
		],
		"*.md": [
			"prettier --write --log-level=warn \"**/*.md\""
		]
	},
	"engines": {
		"node": "25.x"
	},
	"packageManager": "yarn@4.12.0",
	"volta": {
		"node": "25.2.1"
	}
}
